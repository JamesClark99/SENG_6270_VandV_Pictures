        <TextBox x:Name="t_Total_Price" HorizontalAlignment="Left" Height="23" Margin="164,368,0,0" TextWrapping="Wrap" Text="0&#xD;&#xA;" VerticalAlignment="Top" Width="120" FontSize="16"/>
